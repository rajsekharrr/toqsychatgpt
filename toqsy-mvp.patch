+import { supabase, getCurrentUser } from '@/utils/supabaseClient'
+
+export default function Navbar() {
+  const [email, setEmail] = useState<string | null>(null)
+
+  useEffect(() => {
+    getCurrentUser().then(user => {
+      if (user) setEmail(user.email ?? null)
+    })
